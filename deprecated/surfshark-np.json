{
    "version": "6.0.1",
    "description": "Access the web safely and privately on unlimited devices",
    "homepage": "https://surfshark.com",
    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://downloads2.surfshark.com/windows/stable64/6.0.1.999/SurfsharkSetup.exe",
            "hash": "0fc01f8eaeda60a4f4e3b9e1b38ef93414cf86331e664d76f9962487088a9793"
        }
    },
    "installer": {
        "args": [
            "/exenoui",
            "/quiet",
            "/norestart",
            "APPDIR=\"$dir\""
        ]
    },
    "uninstaller": {
        "script": [
            "if (!(is_admin)) { \"$app requires admin rights to $cmd\"; break }",
            "$path = 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Uninstall'",
            "$key = Get-ChildItem $path | Where-Object { $_.PSChildName -like 'Surfshark*' }",
            "if ($key) {",
            "  $u = (Get-ItemProperty $key.PSPath).UninstallString",
            "  if ($u -match '{[0-9A-Fa-f-]+}') { Start-Process msiexec.exe -ArgumentList \"/x $($matches[0]) /qn\" -Wait }",
            "}"
        ]
    },
    "checkver": {
        "url": "https://downloads2.surfshark.com/windows/stable64/meta/windows-changelog.txt",
        "regex": "Surfshark\\s+(\\d+\\.\\d+\\.\\d+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads2.surfshark.com/windows/stable64/$version.999/SurfsharkSetup.exe"
            }
        }
    }
}
