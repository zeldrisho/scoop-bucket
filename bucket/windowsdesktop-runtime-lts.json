{
    "version": "10.0.1",
    "description": "Enables you to run existing Windows desktop applications",
    "homepage": "https://dotnet.microsoft.com/download/dotnet",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://builds.dotnet.microsoft.com/dotnet/WindowsDesktop/10.0.1/windowsdesktop-runtime-10.0.1-win-x64.exe",
            "hash": "38fd64ecee9bd9e364ea6ff698853bf303b195d7339dca961de3b5b13f499e8a"
        },
        "32bit": {
            "url": "https://builds.dotnet.microsoft.com/dotnet/WindowsDesktop/10.0.1/windowsdesktop-runtime-10.0.1-win-x86.exe",
            "hash": "e9d09c9565adac21ee9f51b39e590b3c5861c15e1994cdae09da58267a41e298"
        },
        "arm64": {
            "url": "https://builds.dotnet.microsoft.com/dotnet/WindowsDesktop/10.0.1/windowsdesktop-runtime-10.0.1-win-arm64.exe",
            "hash": "f5bf24470af81530a9967ec3910e0377e24a6a50964012cbf503ff81cc3c65cb"
        }
    },
    "pre_install": [
        "if (!(is_admin)) { \"$app requires admin rights to $cmd\"; break }",
        "Start-Process \"$dir\\$fname\" -ArgumentList @('/install', '/quiet', '/norestart') -Wait -Verb RunAs"
    ],
    "post_install": "Remove-Item \"$dir\\$fname\"",
    "checkver": {
        "url": "https://builds.dotnet.microsoft.com/dotnet/WindowsDesktop/LTS/latest.version",
        "regex": "([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://builds.dotnet.microsoft.com/dotnet/WindowsDesktop/$version/windowsdesktop-runtime-$version-win-x64.exe"
            },
            "32bit": {
                "url": "https://builds.dotnet.microsoft.com/dotnet/WindowsDesktop/$version/windowsdesktop-runtime-$version-win-x86.exe"
            },
            "arm64": {
                "url": "https://builds.dotnet.microsoft.com/dotnet/WindowsDesktop/$version/windowsdesktop-runtime-$version-win-arm64.exe"
            }
        }
    }
}
