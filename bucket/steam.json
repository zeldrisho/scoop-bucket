{
    "version": "nightly",
    "description": "The ultimate destination for playing, discussing and creating games",
    "homepage": "https://store.steampowered.com",
    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://cdn.akamai.steamstatic.com/client/installer/SteamSetup.exe#/dl.7z"
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\uninstall.exe\" -Recurse -Force",
    "shortcuts": [
        [
            "Steam.exe",
            "Steam"
        ]
    ],
    "persist": [
        "config",
        "skins",
        "steamapps",
        "userdata"
    ],
    "post_uninstall": "Remove-Item \"$env:APPDATA\\Microsoft\\Windows\\Start Menu\\Programs\\Steam\" -Recurse -Force -ErrorAction SilentlyContinue"
}
