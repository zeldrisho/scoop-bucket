    "pre_install": [
        "if (!(is_admin)) { \"$app requires admin rights to $cmd\"; break }",
        "Start-Process \"$dir\\$fname\" -ArgumentList @('/exenoui', '/quiet', '/norestart', \"APPDIR=$dir\") -Wait -Verb RunAs",
        "Copy-Item \"$bucketsdir\\$bucket\\scripts\\$app\\service.ps1\" \"$dir\""
    ],
    "post_install": "Remove-Item \"$dir\\$fname\"",
    "shortcuts": [
        [
            "Surfshark.exe",
            "Surfshark"
        ]
    ],
    "post_uninstall": [
        "Remove-Item \"$env:PROGRAMDATA\\Microsoft\\Windows\\Start Menu\\Programs\\Surfshark\" -Recurse -Force -ErrorAction SilentlyContinue",
        "Remove-Item \"$env:USERPROFILE\\Desktop\\Surfshark.lnk\" -ErrorAction SilentlyContinue"
    ],
    "checkver": {
        "url": "https://downloads.surfshark.com/windows/stable64/meta/windows-changelog.txt",
        "regex": "Surfshark ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.surfshark.com/windows/stable64/$version.999/SurfsharkSetup.exe"
            },
            "arm64": {
