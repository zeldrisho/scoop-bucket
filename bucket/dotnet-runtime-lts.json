{
    "version": "10.0.1",
    "description": "The .NET Runtime contains just the components needed to run a console app",
    "homepage": "https://dotnet.microsoft.com/download/dotnet",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://builds.dotnet.microsoft.com/dotnet/Runtime/10.0.1/dotnet-runtime-10.0.1-win-x64.exe",
            "hash": "2f4eb992fa2cddd969b765030cbedb332549c32409a62451feb5644273f3819e"
        },
        "32bit": {
            "url": "https://builds.dotnet.microsoft.com/dotnet/Runtime/10.0.1/dotnet-runtime-10.0.1-win-x86.exe",
            "hash": "fb28a132e418287e62fce2d246d6106fdf0c2fa5185450e6bcd9c691d515cbe2"
        },
        "arm64": {
            "url": "https://builds.dotnet.microsoft.com/dotnet/Runtime/10.0.1/dotnet-runtime-10.0.1-win-arm64.exe",
            "hash": "f4908ddd57588308abe0b121fd8da26d2268ca1fdd9397bf0597e19d8f56ce50"
        }
    },
    "pre_install": [
        "if (!(is_admin)) { \"$app requires admin rights to $cmd\"; break }",
        "Start-Process \"$dir\\$fname\" -ArgumentList @('/install', '/quiet', '/norestart') -Wait -Verb RunAs"
    ],
    "post_install": "Remove-Item \"$dir\\$fname\"",
    "checkver": {
        "url": "https://builds.dotnet.microsoft.com/dotnet/Runtime/LTS/latest.version",
        "regex": "([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://builds.dotnet.microsoft.com/dotnet/Runtime/$version/dotnet-runtime-$version-win-x64.exe"
            },
            "32bit": {
                "url": "https://builds.dotnet.microsoft.com/dotnet/Runtime/$version/dotnet-runtime-$version-win-x86.exe"
            },
            "arm64": {
                "url": "https://builds.dotnet.microsoft.com/dotnet/Runtime/$version/dotnet-runtime-$version-win-arm64.exe"
            }
        }
    }
}
