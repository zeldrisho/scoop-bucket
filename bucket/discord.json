{
    "version": "1.0.9213",
    "description": "Group Chat That's All Fun & Games",
    "homepage": "https://discord.com",
    "license": {
        "identifier": "Freeware",
        "url": "https://discord.com/terms"
    },
    "notes": [
        "Fix autostart: re-enable startup in Discord settings",
        "Fix notification:",
        "- Download makelnk: https://github.com/Robertof/make-shortcut-with-appusermodelid/releases",
        "- Run: makelnk.exe com.squirrel.Discord.Discord \"$dir\\Update.exe\" Discord \"--processStart Discord.exe\"",
        "- Navigate to: \"%APPDATA%\\Microsoft\\Windows\\Start Menu\\Programs\"",
        "- Right click Discord -> Properties -> Change icon -> \"$dir\\app.ico\""
    ],
    "architecture": {
        "64bit": {
            "url": "https://stable.dl2.discordapp.net/distro/app/stable/win/x64/1.0.9213/DiscordSetup.exe#/dl.7z",
            "hash": "f4ee7ddd1b158eccc8cfd3e4c998d7be491e1d0e8de95cad45ca9d1df9855716"
        }
    },
    "pre_install": [
        "Expand-7zipArchive \"$dir\\Discord-$version-full.nupkg\" -ExtractDir 'lib\\net45' -DestinationPath \"$dir\\app-$version\" -Removal",
        "Move-Item \"$dir\\app-$version\\installer.db\" \"$dir\"",
        "Move-Item \"$dir\\app-$version\\app.ico\" \"$dir\"",
        "New-Item \"$dir\\packages\" -ItemType Directory | Out-Null",
        "Move-Item \"$dir\\RELEASES\" \"$dir\\packages\""
    ],
    "shortcuts": [
        [
            "Update.exe",
            "Discord",
            "--processStart Discord.exe",
            "app.ico"
        ]
    ],
    "post_uninstall": "Remove-Item \"$env:APPDATA\\Microsoft\\Windows\\Start Menu\\Programs\\Discord.lnk\" -ErrorAction SilentlyContinue",
    "checkver": {
        "url": "https://updates.discord.com/distributions/app/manifests/latest?channel=stable&platform=win&arch=x64",
        "regex": "x64/([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://stable.dl2.discordapp.net/distro/app/stable/win/x64/$version/DiscordSetup.exe#/dl.7z"
            }
        }
    }
}
