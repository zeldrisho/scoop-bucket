{
    "version": "4.2.5",
    "description": "Antidetect browser",
    "homepage": "https://gpmloginapp.com",
    "license": "Proprietary",
    "depends": "innounp",
    "architecture": {
        "64bit": {
            "url": "https://gpmlogin.com/setup/GPMLogin_setup_x64.exe",
            "hash": "03ddfc0ccdabf84e3dac547023c2c519f9f1e8fe9f86060a5622c42304f9d79f"
        }
    },
    "pre_install": [
        "innounp -x \"$dir\\$fname\" -d\"$dir\" -p\"giaiphapmmo.vn\"",
        "Move-Item \"$dir\\{app}\\*\" \"$dir\""
    ],
    "post_install": "Remove-Item \"$dir\\{app}\", \"$dir\\$fname\" -Recurse -Force",
    "shortcuts": [
        [
            "GPMLogin.exe",
            "GPMLogin"
        ]
    ],
    "checkver": {
        "script": [
            "$dl_url = 'https://gpmlogin.com/setup/GPMLogin_setup_x64.exe'",
            "$dl = cache_path 'gpmlogin' 'unknown' $dl_url",
            "Invoke-WebRequest $dl_url -OutFile $dl",
            "$ver = (Get-Item $dl).VersionInfo.ProductVersion",
            "Move-Item -Force $dl (cache_path 'gpmlogin' $ver $dl_url)",
            "$ver"
        ],
        "regex": "([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gpmlogin.com/setup/GPMLogin_setup_x64.exe"
            }
        }
    }
}

